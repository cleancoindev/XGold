<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <PackageId>Expload.GameToken</PackageId>
    <PackageVersion>0.6.0</PackageVersion>
    <TargetFramework>netstandard2.0</TargetFramework>
    <AssemblyName>$(PackageId)</AssemblyName>
  </PropertyGroup>
  <PropertyGroup Condition="$(Configuration) == 'Release'">
    <!-- Run translation to Pravda bytecode -->
    <PostBuildEvent>pravda compile dotnet -i $(AssemblyName).dll -o $(AssemblyName).pbc</PostBuildEvent>
  </PropertyGroup>  
  <ItemGroup>
    <PackageReference Include="Pravda" Version="0.6.0" />
  </ItemGroup>  
</Project>
