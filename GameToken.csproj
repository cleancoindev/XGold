<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <PackageId>Expload.GameToken</PackageId>
    <PackageVersion>0.7.0</PackageVersion>
    <TargetFramework>netstandard2.0</TargetFramework>
    <AssemblyName>$(PackageId)</AssemblyName>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="Expload.Pravda" Version="0.7.0" />
  </ItemGroup>
  <Target Name="PravdaTranslation" AfterTargets="Publish">
      <Exec Command="echo &quot;Running pravda translation: $(PublishDir) -> $(PublishDir)$(PackageId).pbc &quot;"/>
      <Exec Command="pravda compile dotnet -i $(PublishDir) -o $(PublishDir)$(PackageId).pbc"/>
  </Target>
</Project>
